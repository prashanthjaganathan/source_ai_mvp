# Scheduler Service Environment Variables

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/source_ai_mvp
ENVIRONMENT=development

# S3 Storage Configuration
USE_S3_STORAGE=true
S3_BUCKET_NAME=source-ai-photos
AWS_REGION=us-east-1

# AWS Credentials (optional - can use IAM roles instead)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Optional: CloudFront or Custom Domain for faster photo access
# CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
# S3_CUSTOM_DOMAIN=photos.yourdomain.com

# S3 Photo Path Prefix
S3_PHOTO_PREFIX=photos

